def pyramid(n):
    for i in range(1, n + 1):
        print(' ' * (n - i) + '* ' * i)
def reverse_pyramid(n):
    for i in range(n, 0, -1):
        print(' ' * (n - i) + '* ' * i)  
rows = int(input("Enter number of rows: "))
print("\nPyramid:")
pyramid(rows)
print("\nReverse Pyramid:")
reverse_pyramid(rows)
